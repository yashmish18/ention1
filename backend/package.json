{
  "name": "ention-backend",
  "version": "1.0.0",
  "description": "Production-ready e-commerce backend with Razorpay integration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles --forceExit",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:api": "newman run ./postman_collection.json"
  },
  "dependencies": {
    "express": "^5.1.0",
    "mongoose": "^8.16.2",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.5",
    "pdfkit": "^0.13.0",
    "razorpay": "^2.8.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "cookie-parser": "^1.4.6",
    "express-rate-limit": "^6.7.0",
    "helmet": "^7.0.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-validator": "^7.0.1",
    "morgan": "^1.10.0",
    "winston": "^3.8.2",
    "axios": "^1.4.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "mongodb-memory-server": "^9.1.1",
    "cross-env": "^7.0.3",
    "newman": "^6.0.0"
  },
  "keywords": [
    "e-commerce",
    "razorpay",
    "delhivery",
    "express",
    "mongodb",
    "jwt",
    "delivery",
    "swagger",
    "testing"
  ],
  "author": "EnTion Team",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "middlewares/**/*.js",
      "services/**/*.js",
      "utils/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}